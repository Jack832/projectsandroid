<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#efaa14"
    android:layout_height="match_parent">
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:id="@+id/edit1"
        android:hint="first name"
        android:drawableLeft="@drawable/ic_action_articles"
        android:background="@drawable/edit3design"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:id="@+id/edit2"
        android:hint="last name"
        android:drawableLeft="@drawable/ic_number1"
        android:background="@drawable/edit2design"/>
    <EditText
        android:layout_marginTop="15dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:id="@+id/edit3"
        android:hint="address name"
        android:drawableLeft="@drawable/home"
        android:background="@drawable/editdesign"
        />


</LinearLayout>